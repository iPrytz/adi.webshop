# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.WebshopCont.webshop()
#GET     /                          controllers.ProductCont.showProducts()
GET     /admin                      controllers.WebshopCont.admin()
GET     /admin/products/add        	controllers.ProductCont.addProducts()
POST    /admin/products/add        	controllers.ProductCont.addProduct()
GET     /admin/products/del        	controllers.ProductCont.delProducts()
GET     /admin/products/del/:id     controllers.ProductCont.delProduct(id:Int)
GET     /admin/categories/add      	controllers.CategoryCont.addCategories()
POST    /admin/categories/add      	controllers.CategoryCont.addCategory()
GET     /admin/categories/del      	controllers.CategoryCont.delCategories()
GET     /admin/categories/del/:id   controllers.CategoryCont.delCategory(id:Int)
POST    /create-user                controllers.UserCont.createUser()
GET     /create-user-form           controllers.UserCont.showCreateUserForm()
GET     /login-form                 controllers.UserCont.showLoginForm()
GET     /logout                  	controllers.UserCont.logout()
POST    /login                   	controllers.UserCont.login()
GET     /product                   	controllers.ProductCont.showProducts()
GET     /product/:id               	controllers.ProductCont.showProduct(id:Int)
GET     /orders                   	controllers.OrderCont.showOrders()
GET     /order                     	controllers.OrderCont.showOrder()
GET     /order/:id                 	controllers.OrderCont.showOrderWithId(id:Int)
GET     /category                 	controllers.CategoryCont.showCategories()
GET     /category/:category       	controllers.ProductCont.showProductsInCategory(category)
GET     /cart                      	controllers.CartCont.showCarts()
GET     /cart/:id                   controllers.CartCont.showCart(id:Int)
POST 	/add-to-cart/:id			controllers.CartCont.addToCart(id:Int)
#POST 	/update-cart/:id			controllers.CartCont.update(id:Int)
GET 	/add-to-cart/:id			controllers.CartCont.addToCart(id:Int)
GET 	/remove-from-cart/:id		controllers.CartCont.removeFromCart(id:Int)
POST 	/place-order				controllers.CartCont.placeOrder()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
